.side_bar
  .side_bar__user
    .side_bar__user__name
      = current_user.name
    .side_bar__user__icons
      = link_to new_group_path, class: "side_bar__user__icons__group" do
        = icon('fas', 'edit')
      = link_to edit_user_path(current_user), class: "side_bar__user__icons__account" do
        = icon('fas', 'cog')
  .side_bar__group_list
    - current_user.groups.each do |g|
      = link_to group_messages_path(g) do
        .side_bar__group_list__name
          = g.group_name
          .side_bar__group_list__new_message
            new message