.message{ data: { message_id: message.id } }
  .message--top
    .message--top__user
      = message.user.name
    .message--top__time_stamp
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__text
    - if message.body.present?
      = message.body
  = image_tag message.image, class: 'message__image' if message.image.present?